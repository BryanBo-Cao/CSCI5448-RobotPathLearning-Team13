    <excludes>
        <pattern>/login</pattern>
        <pattern>/register</pattern>
    </excludes>
	
	<decorator name="sidebar-layout" page="sidebar-layout.jsp">
        <pattern>/*</pattern>     
    </decorator>	
</decorators>